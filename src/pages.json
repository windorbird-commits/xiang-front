{
    "easycom": {
        "autoscan": true,
        "custom": {
            "^uv-(.*)": "@climblee/uv-ui/components/uv-$1/uv-$1.vue"
        }
    },
    "pages": [{
            "path": "pages/tools/Tools",
            "style": {
                "navigationBarTitleText": "工具"
            }
        },
        {
            "path": "pages/xiangFangIndex/XiangFangIndex",
            "style": {
                "navigationBarTitleText": "香方",
                "enablePullDownRefresh": true
            }
        },
        {
            "path": "pages/mine/Mine",
            "style": {
                "navigationBarTitleText": "我的"
            }
        },
        {
            "path": "pages/myCreatedXiangFang/MyCreatedXiangFang",
            "style": {
                "navigationBarTitleText": "我的香方"
            }
        },
        {
            "path": "pages/myCollectedXiangFang/MyCollectedXiangFang",
            "style": {
                "navigationBarTitleText": "我的收藏"
            }
        },
        {
            "path": "pages/calculateNianFen/calculateNianFen",
            "style": {
                "navigationBarTitleText": "粘粉加多少"
            }
        },
        {
            "path": "pages/checkNianFen/checkNianFen",
            "style": {
                "navigationBarTitleText": "粘粉比例对吗"
            }
        }
    ],
    "globalStyle": {
        "navigationBarTextStyle": "black",
        "navigationBarTitleText": "uni-app",
        "navigationBarBackgroundColor": "#b39ba4"
    },
    "tabBar": {
        "color": "#7A7E83",
        "selectedColor": "#3cc51f",
        "borderStyle": "black",
        "backgroundColor": "#ffffff",
        "height": "50px",
        "list": [{
                "pagePath": "pages/xiangFangIndex/XiangFangIndex",
                "iconPath": "static/icons/list.png",
                "selectedIconPath": "static/icons/list-s.png",
                "text": "香方"
            },
            {
                "pagePath": "pages/tools/Tools",
                "iconPath": "static/icons/tools.png",
                "selectedIconPath": "static/icons/tools-s.png",
                "text": "工具"
            },
            {
                "pagePath": "pages/mine/Mine",
                "iconPath": "static/icons/customer-center.png",
                "selectedIconPath": "static/icons/customer-center-s.png",
                "text": "我的"
            }
        ]
    }
}